							cout<<"\t\t\t\t\t\tSu numero de intentos es de:  "<<intento<<endl;	
						}
						else{
							cout<<"Su respuesta es incorrecta :'("<<endl;
							intento++;
							cout<<"\t\t\t\t\t\tSu puntuacion es de:  "<<puntuacion<<endl;
							cout<<"\t\t\t\t\t\tSu numero de intentos es de:  "<<intento<<endl;
						}
						} while(intento<10);
						cout<<"Termino con sus 10 intentos"<<endl;
						cout<<"presione una tecla para continuar"<<endl;
						system("pause");
						system("cls");
						cout<<nombre<<", su puntuacion final es:   "<<puntuacion<<"  de   "<<intento<<endl;
						break;
				
			}
			break;			
		
	}
}
